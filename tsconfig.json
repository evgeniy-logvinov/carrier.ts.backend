{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "sourceMap": true,
    "incremental": true,
    "rootDir": "./src",
    "outDir": "./",
    "strict": true,
    "declaration": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}